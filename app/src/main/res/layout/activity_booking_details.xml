<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfdfd"
    tools:context=".booking_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fdfdfd">
        
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="19dp">

                <TextView
                    android:textColor="#000000"
                    android:id="@+id/heading_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/belgrano"
                    android:text="Booking Name:"
                    android:textSize="22sp"/>
                <EditText
                    android:textColorHighlight="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:id="@+id/book"
                    android:fontFamily="@font/belgrano"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="60dp">
                <TextView
                    android:id="@+id/d_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/belgrano"
                    android:text="Select Booking Date:"
                    android:textColor="#000000"
                    android:textSize="22sp"/>
                <EditText
                    android:id="@+id/date_book"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/belgrano"

                    android:textSize="22sp"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="60dp">
                <TextView
                    android:id="@+id/t_selection"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/belgrano"
                    android:text="Select Booking Time:"
                    android:textSize="22sp"/>
                <EditText
                    android:id="@+id/time_book"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/belgrano"

                    android:textSize="22sp"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="60dp">
                <TextView
                    android:id="@+id/guests_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/belgrano"
                    android:textColor="#000000"
                    android:text="Number of Guests"
                    android:textSize="22sp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/spinner"
                    android:outlineSpotShadowColor="#000000"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_marginTop="600dp"
            android:layout_marginLeft="16dp"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:text="Confirm Booking"
            android:textColor="#FFFFFF"
            android:id="@+id/confirmation"
            android:textSize="30sp"
            android:background="@drawable/button"/>

        
        
        
        
        
    </RelativeLayout>
    
    
    
</androidx.constraintlayout.widget.ConstraintLayout>